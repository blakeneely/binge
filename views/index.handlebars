    <div class="hero-body">
        <div class="hero-container container has-text-centered">
            <h1 class="title has-text-white has-text-weight-bold is-size-2">
                <!-- A source of movie and actor info -->
            </h1>
            <div class="control has-icons-left is-black">
                <input class="input is-medium is-rounded" type="text" placeholder="Search for movies or actors to binge" id="user-input">
                <span class="icon is-left">
                    <i class="fas fa-search"></i>
                </span>
            </div>
